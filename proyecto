# include <stdio.h>
int i, j, numero,datos, espuesta;
main(){

//aqui ingresamos el numero de datos a sumar y lo guardoamos en una variable (datos)
printf("introduce el numero de datos a sumar\n");
scanf("%d", & datos);
printf("\n\n\n");


//aqui utilizamos el ciclo for
for(i=1; i<=datos; i++){
printf("introdusca el dato numero %d", i);
printf("a sumar: ");
scanf("%d", &numero);
respuesta=respuesta+numero;
printf("\nla respuesta de esa suma es:%d", respuesta); }

}

